A;AACA,eAAA,WAAA,GAAA,IAAA,CAAA,IAAA;AACA;AACA,OALA;AAMA,KAxDA;;AAyDA,IAAA,iBAAA,CAAA,EAAA,EAAA,IAAA,EAAA,IAAA,EAAA;AACA;AACA,YAAA,QAAA,GAAA,cAAA,CAAA,OAAA,CAAA,UAAA,CAAA;;AACA,UAAA,CAAA,QAAA,EAAA;AACA,QAAA,IAAA,CAAA,GAAA,CAAA;AACA;AACA;;AACA,WAAA,QAAA,GAAA,IAAA,CAAA,KAAA,CAAA,QAAA,CAAA;AACA,WAAA,cAAA;AACA,WAAA,aAAA,GATA,CASA;;AACA,MAAA,IAAA;AACA,KApEA;;AAqEA,IAAA,gBAAA,CAAA,EAAA,EAAA,IAAA,EAAA,IAAA,EAAA;AACA,UAAA,CAAA,YAAA,CAAA,OAAA,CAAA,UAAA,EAAA,CAAA,MAAA,CAAA,EAAA,EAAA,CAAA,EAAA;AACA,QAAA,aAAA,CAAA,EAAA,CAAA,MAAA,CAAA,EAAA,CAAA;AACA,QAAA,YAAA,CAAA,OAAA,CAAA,UAAA,EAAA,CAAA,MAAA,CAAA,EAAA,EAAA,EAAA,MAAA;AACA;;AACA,MAAA,IAAA;AACA,KA3EA;;AA4EA,IAAA,OAAA,GAAA;AACA,WAAA,aAAA,CAAA,KAAA,MAAA,CAAA,MAAA,CAAA,EAAA;AACA;;AA9EA;AAlCA,CAAA","sourcesContent":["<template>\r\n    <el-row>\r\n        <el-col :span=\"18\">\r\n            <div style=\"padding-right: 50px;box-sizing: border-box;\">\r\n                <div>\r\n                    <h1>{{ newsInfo.name }}</h1>\r\n                    <div\r\n                        style=\"font-size: 12px;background-color: rgb(250, 250, 250);padding: 16px 6px;border-radius: 5px;\">\r\n                        <span class=\"news-tags\">{{ newsInfo.tagName }}</span>\r\n                        <span style=\"margin-left: 10px;\">{{ parseTime(newsInfo.createTime) }}</span>\r\n                        <span style=\"margin-left: 10px;\">发布者：{{ newsInfo.publisherName }}</span>\r\n                        <span style=\"margin-left: 10px;\"><i class=\"el-icon-view\"></i> {{ newsInfo.viewsNumber || 0 }}</span>\r\n                        <el-button style=\"margin-left: 20px;\" @click=\"saveNewsOperation\" class=\"customer\" size=\"mini\">{{\r\n                            !saveFlag ?\r\n                                '立即收藏' : '取消收藏' }}</el-button>\r\n                    </div>\r\n                    <div v-html=\"newsInfo.content\"></div>\r\n                </div>\r\n                <div>\r\n                    <Evaluations :contentId=\"newsInfo.id\" contentType=\"NEWS\" />\r\n                </div>\r\n            </div>\r\n        </el-col>\r\n        <el-col :span=\"6\">\r\n            <h3 style=\"padding: 10px 30px;\">资讯推荐</h3>\r\n            <el-col @click.native=\"newsItemClick(news)\" :span=\"24\" :key=\"index\" v-for=\"(news, index) in newsTopList\">\r\n                <div style=\"padding: 25px 30px;box-sizing: border-box;\">\r\n                    <img :src=\"news.cover\" :alt=\"news.name\" style=\"width: 100%;height: 118px;border-radius: 5px;\">\r\n                    <h3 class=\"news-title\">{{ news.name }}</h3>\r\n                    <div style=\"font-size: 12px;\">\r\n                        <span class=\"news-tags\">{{ news.tagName }}</span>\r\n                        <span style=\"margin-left: 10px;\">{{ parseTime(news.createTime) }}</span>\r\n                    </div>\r\n                </div>\r\n            </el-col>\r\n        </el-col>\r\n    </el-row>\r\n</template>\r\n<script>\r\nimport { timeAgo } from \"@/utils/data\"\r\nimport Evaluations from \"@/components/Evaluations.vue\";\r\nexport default {\r\n    components: { Evaluations },\r\n    name: \"NewsDetail\",\r\n    data() {\r\n        return {\r\n            newsInfo: {},\r\n            newsTopList: [],\r\n            saveFlag: false,\r\n            newsSaveList: []\r\n        }\r\n    },\r\n    beforeRouteEnter(to, from, next) {\r\n        const newsInfo = sessionStorage.getItem('newsInfo');\r\n        if (!newsInfo) {\r\n            next('/');\r\n            return;\r\n        }\r\n        next(vm => {\r\n            vm.newsInfo = JSON.parse(newsInfo);\r\n            vm.loadSaveStatus();\r\n            // 这里不再调用increaseViews\r\n        });\r\n    },\r\n    created() {\r\n        this.loadAllTopNews();\r\n        this.increaseViews(); // 统一在这里调用\r\n    },\r\n    mounted() {\r\n        // 确保只在组件挂载后执行一次\r\n        if (!this.$route.meta.viewCountIncreased) {\r\n            this.increaseViews();\r\n            this.$route.meta.viewCountIncreased = true;\r\n        }\r\n    },\r\n    methods: {\r\n        // 增加浏览次数\r\n        increaseViews() {\r\n            if (!this.newsInfo || !this.newsInfo.id) return;\r\n            \r\n            this.$axios.post('/news/increaseViews', { id: this.newsInfo.id }).then(response => {\r\n                const { data } = response;\r\n                if (data.code === 200) {\r\n                    this.newsInfo.viewsNumber = data.data;\r\n                }\r\n            });\r\n        },\r\n        loadSaveStatus() {\r\n            if (!this.newsInfo || !this.newsInfo.id) return;\r\n            \r\n            const newsSaveQueryDto = {\r\n                newsId: this.newsInfo.id\r\n            }\r\n            this.$axios.post('/news-save/queryUser', newsSaveQueryDto).then(response => {\r\n                const { data } = response;\r\n                if (data.code === 200) {\r\n                    this.saveFlag = data.data.length !== 0;\r\n                }\r\n            })\r\n        },\r\n        // 收藏或取消收藏操作\r\n        saveNewsOperation() {\r\n            if (!this.newsInfo || !this.newsInfo.id) return;\r\n            \r\n            this.$axios.post('/news-save/operation', { newsId: this.newsInfo.id }).then(response => {\r\n                const { data } = response;\r\n                if (data.code === 200) {\r\n                    this.$message.success(!this.saveFlag ? '收藏成功' : '取消收藏成功');\r\n                    this.saveFlag = !this.saveFlag;\r\n                }\r\n            })\r\n        },\r\n        newsItemClick(news) {\r\n            // 更新sessionStorage中的资讯信息\r\n            sessionStorage.setItem('newsInfo', JSON.stringify(news));\r\n            // 重新加载页面以确保所有状态都被正确重置\r\n            this.$router.go(0);\r\n        },\r\n        // 转换时间\r\n        parseTime(time) {\r\n            return timeAgo(time);\r\n        },\r\n        // 查询推荐资讯\r\n        loadAllTopNews() {\r\n            const newQueryDto = { isTop: true };\r\n            this.$axios.post('/news/query', newQueryDto).then(response => {\r\n                const { data } = response;\r\n                if (data.code === 200) {\r\n                    this.newsTopList = data.data;\r\n                }\r\n            })\r\n        },\r\n        beforeRouteUpdate(to, from, next) {\r\n            // 当路由参数变化时重新加载数据\r\n            const newsInfo = sessionStorage.getItem('newsInfo');\r\n            if (!newsInfo) {\r\n                next('/');\r\n                return;\r\n            }\r\n            this.newsInfo = JSON.parse(newsInfo);\r\n            this.loadSaveStatus();\r\n            this.increaseViews(); // 为新的资讯增加浏览量\r\n            next();\r\n        },\r\n        beforeRouteEnter(to, from, next) {\r\n            if (!localStorage.getItem(`viewed_${to.params.id}`)) {\r\n                increaseViews(to.params.id)\r\n                localStorage.setItem(`viewed_${to.params.id}`, 'true')\r\n            }\r\n            next()\r\n        },\r\n        created() {\r\n            this.getNewsDetail(this.$route.params.id)\r\n        },\r\n    }\r\n};\r\n</script>\r\n\r\n<style scoped lang=\"scss\">\r\n.news-tags {\r\n    display: inline-block;\r\n    padding: 4px 10px;\r\n    //background-color: rgb(226, 242, 249);\r\n    color: #1d3cc4;\r\n    border-radius: 3px;\r\n}\r\n</style>\r\n"],"sourceRoot":"src/views/user"}]}