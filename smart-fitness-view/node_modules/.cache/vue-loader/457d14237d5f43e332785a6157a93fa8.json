mg :src=\"scope.row.cover\" style=\"width: 48px;height: 34px;border-radius: 5px;\" />\r\n                    </template>\r\n                </el-table-column>\r\n                <el-table-column prop=\"tagName\" width=\"138\" label=\"所属分类\">\r\n                    <template slot-scope=\"scope\">\r\n                        <span><i class=\"el-icon-discount\" style=\"margin-right: 3px;\"></i>\r\n                            {{ scope.row.tagName }}\r\n                        </span>\r\n                    </template>\r\n                </el-table-column>\r\n                <el-table-column prop=\"createTime\" width=\"168\" label=\"发布时间\"></el-table-column>\r\n                <el-table-column prop=\"name\" label=\"标题\"></el-table-column>\r\n                <el-table-column prop=\"viewsNumber\" width=\"100\" label=\"浏览量\">\r\n                    <template slot-scope=\"scope\">\r\n                        <span><i class=\"el-icon-view\" style=\"margin-right: 3px;\"></i>\r\n                            {{ scope.row.viewsNumber || 0 }}\r\n                        </span>\r\n                    </template>\r\n                </el-table-column>\r\n                <el-table-column label=\"操作\" width=\"120\">\r\n                    <template slot-scope=\"scope\">\r\n                        <span class=\"text-button\" @click=\"handleDelete(scope.row)\">删除</span>\r\n                    </template>\r\n                </el-table-column>\r\n            </el-table>\r\n            <el-pagination style=\"margin: 20px 0;\" @size-change=\"handleSizeChange\" @current-change=\"handleCurrentChange\"\r\n                :current-page=\"currentPage\" :page-sizes=\"[10, 20]\" :page-size=\"pageSize\"\r\n                layout=\"total, sizes, prev, pager, next, jumper\" :total=\"totalItems\"></el-pagination>\r\n        </el-row>\r\n    </el-row>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n    data() {\r\n        return {\r\n            currentPage: 1,\r\n            pageSize: 10,\r\n            totalItems: 0,\r\n            tableData: [],\r\n            selectedRows: [],\r\n            loading: false\r\n        };\r\n    },\r\n    created() {\r\n        this.fetchFreshData();\r\n    },\r\n    beforeDestroy() {\r\n        // 组件销毁前清理数据\r\n        this.tableData = [];\r\n        this.selectedRows = [];\r\n    },\r\n    methods: {\r\n        handleSelectionChange(selection) {\r\n            this.selectedRows = selection;\r\n        },\r\n        async handleDelete(row) {\r\n            const confirmed = await this.$swalConfirm({\r\n                title: '删除帖子',\r\n                text: `删除后不可恢复，是否继续？`,\r\n                icon: 'warning',\r\n            });\r\n            if (confirmed) {\r\n                try {\r\n                    const response = await this.$axios.post(`/news/deleteMyNews`, [row.id]);\r\n                    if (response.data.code === 200) {\r\n                        this.$message.success('删除成功');\r\n                        this.fetchFreshData();\r\n                    } else {\r\n                        this.$message.error(response.data.message || '删除失败');\r\n                    }\r\n                } catch (error) {\r\n                    this.$message.error('删除失败');\r\n                }\r\n            }\r\n        },\r\n        handleSizeChange(val) {\r\n            this.pageSize = val;\r\n            this.currentPage = 1;\r\n            this.fetchFreshData();\r\n        },\r\n        handleCurrentChange(val) {\r\n            this.currentPage = val;\r\n            this.fetchFreshData();\r\n        },\r\n        async fetchFreshData() {\r\n            if (this.loading) return;\r\n            this.loading = true;\r\n            try {\r\n                const userInfo = JSON.parse(sessionStorage.getItem('userInfo'));\r\n                const params = {\r\n                    current: this.currentPage,\r\n                    size: this.pageSize,\r\n                    userId: userInfo.id\r\n                };\r\n                const response = await this.$axios.post(`/news/queryMyNews`, params);\r\n                const { data } = response;\r\n                if (data.code === 200) {\r\n                    this.tableData = data.data;\r\n                    this.totalItems = data.total || 0;\r\n                } else {\r\n                    this.$message.error(data.message || '查询失败');\r\n                }\r\n            } catch (error) {\r\n                console.error('查询我的帖子失败:', error);\r\n                this.$message.error('查询失败');\r\n            } finally {\r\n                this.loading = false;\r\n            }\r\n        }\r\n    }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.text-button {\r\n    cursor: pointer;\r\n    color: #15559a;\r\n    margin-right: 10px;\r\n}\r\n</style> "]}]}