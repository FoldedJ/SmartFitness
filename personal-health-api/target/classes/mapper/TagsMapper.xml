<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kmbeast.mapper.TagsMapper">

    <insert id="save">
        INSERT INTO SYSDBA.TAGS (NAME)
        VALUES (#{name})
    </insert>

    <update id="update">
        UPDATE SYSDBA.TAGS
        <set>
            <if test="name != null and name != ''">
                NAME = #{name},
            </if>
        </set>
        WHERE ID = #{id}
    </update>

    <delete id="batchDelete" parameterType="list">
        DELETE FROM SYSDBA.TAGS WHERE ID IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="query" resultMap="BaseResultMap">

        SELECT t.*
        FROM SYSDBA.TAGS t
        <where>
            <if test="name != null and name != ''">
                AND t.NAME LIKE '%' || #{name} || '%'
            </if>
        </where>
        ORDER BY t.ID DESC
        <if test="current != null and size != null">
            OFFSET #{current} ROWS FETCH NEXT #{size} ROWS ONLY
        </if>
    </select>

    <select id="queryCount" resultType="integer">

        SELECT COUNT(*)
        FROM SYSDBA.TAGS t
        <where>
            <if test="name != null and name != ''">
                AND t.NAME LIKE '%' || #{name} || '%'
            </if>
        </where>

    </select>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.kmbeast.pojo.entity.Tags">
        <id column="ID" property="id"/>
        <result column="NAME" property="name"/>
    </resultMap>

</mapper>
